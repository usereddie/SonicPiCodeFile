=begin
trancemelody = [partone, partone, parttwo, partthree, partfour]
i = 0


live_loop :melody do
  5.times do
    sample trancemelody[i], amp: 2.5
    sleep(16)
    i = i + 1
  end
  stop
end
=end

sleep 8

#=begin
live_loop :bass do
  5.times do
    sample trancebass, amp: 3
    sleep 8
